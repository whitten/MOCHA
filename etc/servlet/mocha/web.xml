<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">
    <servlet>
        <servlet-name>OrderCheck</servlet-name>
        <servlet-class>EXT.DOMAIN.pharmacy.peps.external.common.preencapsulation.servlet.OrderCheckServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>DrugInfo</servlet-name>
        <servlet-class>EXT.DOMAIN.pharmacy.peps.external.common.preencapsulation.servlet.DrugInfoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderCheck</servlet-name>
        <url-pattern>/ordercheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DrugInfo</servlet-name>
        <url-pattern>/druginfo</url-pattern>
    </servlet-mapping>
